<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com/XSD/options.xsd">
	<import>
		<categories>
			<!-- page category -->
			<category name="legalnotice">
				<parent>general</parent>
				<showorder>30</showorder>
				<options>module_legalnotice</options>
			</category>
			<category name="legalnotice.general">
				<parent>legalnotice</parent>
			</category>
			<category name="legalnotice.data">
				<parent>legalnotice</parent>
			</category>
			<category name="legalnotice.text">
				<parent>legalnotice</parent>
			</category>
			<!-- /page category -->
			<!-- module category -->
			<category name="module.content.managepages">
				<parent>module.content</parent>
			</category>
			<!-- /module category -->
		</categories>
		<options>
			<!-- module options -->
			<option name="module_legalnotice">
				<categoryname>module.content.managepages</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<!-- /module options -->
			<!-- page options -->
			<option name="legalnotice_url_use">
				<categoryname>legalnotice.general</categoryname>
				<optiontype>boolean</optiontype>
				<showorder>1</showorder>
				<enableoptions><![CDATA[legalnotice_url,!legalnotice_allow_spider,!legalnotice_brandingfree,!legalnotice_name,!legalnotice_address,!legalnotice_email,!legalnotice_email_userid_use,!legalnotice_email_userid,!legalnotice_phone,!legalnotice_fax,!legalnotice_representative,!legalnotice_register,!legalnotice_vat_id,!legalnotice_userid,!legalnotice_text,!legalnotice_text_enable_smilies,!legalnotice_text_enable_html,!legalnotice_text_enable_bbcodes]]></enableoptions>
			</option>
			<option name="legalnotice_url">
				<categoryname>legalnotice.general</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue><![CDATA[http://]]></defaultvalue>
				<showorder>2</showorder>
			</option>
			<option name="legalnotice_allow_spider">
				<categoryname>legalnotice.general</categoryname>
				<optiontype>boolean</optiontype>
				<hidden>1</hidden>
				<defaultvalue>0</defaultvalue>
				<showorder>3</showorder>
			</option>
			<option name="legalnotice_brandingfree">
				<categoryname>legalnotice.general</categoryname>
				<optiontype>boolean</optiontype>
				<hidden>1</hidden>
				<defaultvalue>1</defaultvalue>
				<showorder>4</showorder>
			</option>
			<option name="legalnotice_name">
				<categoryname>legalnotice.data</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue></defaultvalue>
				<showorder>1</showorder>
			</option>
			<option name="legalnotice_address">
				<categoryname>legalnotice.data</categoryname>
				<optiontype>textarea</optiontype>
				<defaultvalue></defaultvalue>
				<showorder>2</showorder>
			</option>
			<option name="legalnotice_email">
				<categoryname>legalnotice.data</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue></defaultvalue>
				<showorder>3</showorder>
				<enableoptions><![CDATA[legalnotice_email_userid_use,legalnotice_email_userid]]></enableoptions>
			</option>
			<option name="legalnotice_email_userid_use">
				<categoryname>legalnotice.data</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<showorder>4</showorder>
				<enableoptions><![CDATA[legalnotice_email_userid]]></enableoptions>
			</option>
			<option name="legalnotice_email_userid">
				<categoryname>legalnotice.data</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue>1</defaultvalue>
				<showorder>5</showorder>
			</option>
			<option name="legalnotice_phone">
				<categoryname>legalnotice.data</categoryname>
				<optiontype>textarea</optiontype>
				<defaultvalue></defaultvalue>
				<showorder>6</showorder>
			</option>
			<option name="legalnotice_fax">
				<categoryname>legalnotice.data</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue></defaultvalue>
				<showorder>7</showorder>
			</option>
			<option name="legalnotice_representative">
				<categoryname>legalnotice.data</categoryname>
				<optiontype>textarea</optiontype>
				<defaultvalue></defaultvalue>
				<showorder>8</showorder>
			</option>
			<option name="legalnotice_register">
				<categoryname>legalnotice.data</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue></defaultvalue>
				<showorder>9</showorder>
			</option>
			<option name="legalnotice_vat_id">
				<categoryname>legalnotice.data</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue></defaultvalue>
				<showorder>10</showorder>
			</option>
			<option name="legalnotice_userid">
				<categoryname>legalnotice.data</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue></defaultvalue>
				<hidden>0</hidden>
				<showorder>11</showorder>
			</option>
			<option name="legalnotice_text">
				<categoryname>legalnotice.text</categoryname>
				<optiontype>textarea</optiontype>
				<defaultvalue></defaultvalue>
				<showorder>1</showorder>
			</option>
			<option name="legalnotice_text_enable_smilies">
				<categoryname>legalnotice.text</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<showorder>2</showorder>
				<options>module_smiley</options>
			</option>
			<option name="legalnotice_text_enable_html">
				<categoryname>legalnotice.text</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<showorder>3</showorder>
			</option>
			<option name="legalnotice_text_enable_bbcodes">
				<categoryname>legalnotice.text</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<showorder>4</showorder>
			</option>
			<!-- /page options -->
		</options>
	</import>
</data>